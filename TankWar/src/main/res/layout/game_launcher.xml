<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imvSpalsh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash" />

    <RadioGroup
        android:id="@+id/rdgGameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imvSpalsh"
        android:layout_centerHorizontal="true" >

        <RadioButton
            android:id="@+id/rdbSingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="单人游戏"
            android:textColor="#fff"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdbDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双人游戏"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/ckbCustomMap"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rdgGameMode"
        android:text="自定义地图？"
        android:textColor="#fff" />

    <CheckBox
        android:id="@+id/ckbMusicCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ckbCustomMap"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:text="是否打开声音？"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#000"
        android:text="退出游戏"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#000"
        android:text="开始游戏"
        android:textColor="#fff" />

</RelativeLayout>